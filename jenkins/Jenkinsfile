pipeline {
    agent any

    environment {
        OUTPUT_DIRECTORY = ".output"
    }

    stages {
        stage('Stage name') {
            steps {
                echo 'Stage 1 started'
            }
        }

        stage('Pod install') {
            steps {
                echo 'Installing pods'
                    sh 'pod install'
            }
        }

        stage('Build and test') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh 'fastlane build_and_unit_test'
                }
            }
        }
    }

    post {
        success {
            echo 'CI exitóso'
        }
        failure {
            echo 'CI fallído'
        }
    	always {
            //echo 'CI terminó'
            echo 'Saving artifacts ...'
            archiveArtifacts artifacts: "${OUTPUT_DIRECTORY}/*.*"
            //cleanWs()
    	}
    }
}